pipeline {
    agent none // No default agent
    tools {
        maven 'MVN_HOME'
    }

    stages {
        stage('Maven Build') {
            agent any
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    bat 'docker build -t claudiufinalproject .'
                    // Tag the image with your Docker Hub username
                    bat 'docker tag claudiufinalproject ich9393/claudiufinalproject'
                }
            }
        }

        stage('Push to DockerHub') {
            agent any
            steps {
                script {
                    // Push the image to Docker Hub
                    // Make sure to use the tagged image name
                    bat 'docker push ich9393/claudiufinalproject'
                }
            }
        }

        stage('Docker Deploy') {
            agent { label 'AnsibleCN' }
            steps {
                script {
                    // Run the Ansible playbook
                    ansiblePlaybook credentialsId: '78106c2c-41ab-480a-a5e0-f13d2351632e', playbook: 'deploy-docker.yml'
                }
            }
        }
    }
}

