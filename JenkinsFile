pipeline {
    agent none // No default agent
    tools {
        maven 'MVN_HOME'
    }

    stages {
        stage('Maven Build') {
            agent any
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            agent any
            steps {
                script {
                    bat 'docker build -t claudiufinalproject .'
                }
            }
        }
    }
}
